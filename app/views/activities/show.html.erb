<div class="container">
  <div class="row">
    <div class="col d-flex flex-row justify-content-center">
      <div class="card" style="width: 400px;">

        <%= image_tag('evrone.jpg', class: 'card-img-top') %>

        <div class="card-body">
          <h2 class="card-title text-center"><%= @activity.title %></h2>
          <p class="text-muted text-right">Author: <%= @activity.author %></p>

          <div class="card-text text-center"><%= @activity.short_description %></div>
          <% if @activity.show_duration? %>
            <!-- todo: move duration to presenter -->
            <div class="card-text text-right">Duration: ~<%= @activity.duration_in_hours.round %>h</div>
          <% end %>
        </div>
        <div class="card-footer text-right">
          <%= link_to 'Edit', edit_activity_path(@activity) %> |
          <%= link_to 'Back', activities_path %>
        </div>
      </div>
    </div>
  </div>
</div>
